sub sign{
##sign returns +1 for postive values, -1 for negative, and 0 for 0
##you can feed it a pdl, too, and it will return the same-sized pdl
##with the above values (done for every element).
    my($numbers)=@_;
    my($out)=$numbers/abs($numbers);
    my($bad)=$out->where(!$numbers);
    $bad.=0;
    
    return $out;
}
